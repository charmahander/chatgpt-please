{
  "manifest_version": 3,
  "name": "ChatGPT Please",
  "version": "1.0",
  "description": "Automatically appends 'please' to the end of every prompt on ChatGPT",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
